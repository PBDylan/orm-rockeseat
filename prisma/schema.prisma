generator client {
  provider = "prisma-client-js" // Prisma utilizado para conectar com a base de dados
}

datasource db { // Configuração da fonte de dados, indicando o tipo de banco de dados e a URL de conexão
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid()) // Campo de ID do usuário, String, com valor padrão gerado como UUID (hash único para cada usuário)
  name String
  email String @unique // Campo de email do usuário, String, com restrição de unicidade para evitar duplicatas

  @@map("users") // Mapeamento do modelo para a tabela "users" no banco de dados
}